<UserControl x:Class="OC.Assistant.Theme.LogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OC.Assistant.Theme"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="800" Loaded="Console_OnLoaded"
             Background="{DynamicResource White6Brush}">
    <UserControl.Resources>
        <Style TargetType="ListBox" x:Key="LogViewerStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <ScrollViewer CanContentScroll="True" HorizontalScrollBarVisibility="Disabled">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                x:Name="Bd"
                                CornerRadius="{DynamicResource ControlCornerRadius}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Accent3Brush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <DataTemplate DataType="{x:Type local:Message}">
            <Grid Margin="0 0 0 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ContentControl 
                    Grid.Column="0" 
                    FontSize="20" 
                    Template="{Binding IconTemplate}" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                <VirtualizingStackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Header}"
                               FontSize="12"
                               Foreground="{DynamicResource White3Brush}"
                               Cursor="Arrow">
                    </TextBlock>
                    <TextBlock Text="{Binding Text}"
                               FontSize="12"
                               Foreground="{DynamicResource ForegroundBaseBrush}"
                               VerticalAlignment="Center">
                    </TextBlock>
                </VirtualizingStackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="4" x:Name="SplitterRow"></RowDefinition>
            <RowDefinition Height="*" x:Name="DetailRow"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button 
                Click="ClearOnClick"
                Width="30"
                VerticalAlignment="Stretch"
                Padding="0 0 2 0"
                Margin="5 3 3 3">
                <ContentControl 
                    Template="{DynamicResource IconTemplate}"
                    FontSize="14"
                    Foreground="{DynamicResource ForegroundBaseBrush}"
                    Content="{DynamicResource IconDelete}"/>
            </Button>
            <Border Background="{DynamicResource White4Brush}" Width="1" Margin="3 4"></Border>
            <ToggleButton
                Click="InfoFilterOnClick"
                IsChecked="True"
                Width="30"
                VerticalAlignment="Stretch"
                Padding="0 0 0 2"
                Margin="3 3 0 3">
                <ContentControl FontSize="16" Template="{DynamicResource InformationIcon}" />
            </ToggleButton>
            <ToggleButton
                Click="WarningFilterOnClick"
                IsChecked="True"
                Width="30"
                VerticalAlignment="Stretch"
                Padding="0 0 0 2"
                Margin="3 3 0 3">
                <ContentControl FontSize="16" Template="{DynamicResource WarningIcon}" />
            </ToggleButton>
            <ToggleButton
                Click="ErrorFilterOnClick"
                IsChecked="True"
                Width="30"
                VerticalAlignment="Stretch"
                Padding="0 0 0 2"
                Margin="3 3 0 3">
                <ContentControl FontSize="16" Template="{DynamicResource ErrorIcon}" />
            </ToggleButton>
        </StackPanel>
        <Grid Grid.Row="1" Background="{DynamicResource Dark2Brush}" >
            <ListBox Style="{StaticResource LogViewerStyle}" 
                     x:Name="ItemsControl"
                     SelectionMode="Single"
                     SelectionChanged="ItemsControlOnSelectionChanged"
                     Background="{DynamicResource Dark2Brush}"
                     BorderThickness="0"/>
        </Grid>
        <GridSplitter Grid.Row="2" HorizontalAlignment="Stretch" Background="Transparent"/>
        <Grid Grid.Row="3">
            <TextBox 
                x:Name="DetailBox" 
                VerticalContentAlignment="Top"
                IsReadOnly="True" 
                TextWrapping="Wrap"
                Background="{DynamicResource Dark2Brush}">
                <TextBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Copy" Command="Copy"></MenuItem>
                    </ContextMenu>
                </TextBox.ContextMenu>
            </TextBox>
            <Button 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right" 
                Width="24" Height="24" 
                Padding="0" 
                Click="CloseDetailOnClick">
                <ContentControl 
                    Template="{DynamicResource IconTemplate}"
                    FontSize="10"
                    Foreground="{DynamicResource ForegroundBaseBrush}"
                    Content="{DynamicResource IconChromeClose}"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>