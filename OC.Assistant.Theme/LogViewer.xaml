<UserControl x:Class="OC.Assistant.Theme.LogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OC.Assistant.Theme"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="800" Loaded="Console_OnLoaded"
             Background="{DynamicResource White6Brush}">
    <UserControl.Resources>
        <Style TargetType="ItemsControl" x:Key="LogViewerStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <ScrollViewer CanContentScroll="True">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate DataType="{x:Type local:Message}">
            <Grid Margin="0 0 0 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <TextBlock 
                        FontSize="20"
                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                        Text="{Binding IconBackground}"
                        Foreground="{Binding IconColorBackground}"/>
                    <TextBlock 
                        FontSize="20"
                        FontFamily="{DynamicResource SymbolThemeFontFamily}"
                        Text="{Binding IconForeground}"
                        Foreground="{Binding IconColorForeground}"/>
                </Grid>
                <VirtualizingStackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Header}"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource White3Brush}"
                               Cursor="Arrow">
                    </TextBlock>
                    <TextBlock Text="{Binding Text}"
                               FontSize="12"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource ForegroundBaseBrush}"
                               VerticalAlignment="Center"
                               Background="Transparent">
                    </TextBlock>
                </VirtualizingStackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button 
                Click="ClearOnClick"
                Width="30"
                VerticalAlignment="Stretch"
                Padding="0"
                Margin="3">
                <TextBlock FontFamily="{DynamicResource SymbolThemeFontFamily}" FontSize="14">&#xE74D;</TextBlock>
            </Button>
            <Border Background="{DynamicResource White4Brush}" Width="1" Margin="3 4"></Border>
            <ToggleButton
                Click="InfoFilterOnClick"
                IsChecked="True"
                Width="30"
                VerticalAlignment="Stretch"
                Padding="0 0 0 2"
                Margin="3 3 0 3">
                <Grid>
                    <TextBlock 
                        FontFamily="{DynamicResource SymbolThemeFontFamily}" 
                        Foreground="{DynamicResource AccentBrush}"
                        FontSize="16" 
                        Text="&#xF136;"/>
                    <TextBlock 
                        FontFamily="{DynamicResource SymbolThemeFontFamily}" 
                        Foreground="{DynamicResource ForegroundBaseBrush}"
                        FontSize="16" 
                        Text="&#xF13F;"/>
                </Grid>
            </ToggleButton>
            <ToggleButton
                Click="WarningFilterOnClick"
                IsChecked="True"
                Width="30"
                VerticalAlignment="Stretch"
                Padding="0 0 0 2"
                Margin="3 3 0 3">
                <Grid>
                    <TextBlock 
                        FontFamily="{DynamicResource SymbolThemeFontFamily}" 
                        Foreground="{DynamicResource WarningBrush}"
                        FontSize="16" 
                        Text="&#xF139;"/>
                    <TextBlock 
                        FontFamily="{DynamicResource SymbolThemeFontFamily}" 
                        Foreground="{DynamicResource BackgroundBaseBrush}"
                        FontSize="16" 
                        Text="&#xF13B;"/>
                </Grid>
            </ToggleButton>
            <ToggleButton
                Click="ErrorFilterOnClick"
                IsChecked="True"
                Width="30"
                VerticalAlignment="Stretch"
                Padding="0 0 0 2"
                Margin="3 3 0 3">
                <Grid>
                    <TextBlock 
                        FontFamily="{DynamicResource SymbolThemeFontFamily}" 
                        Foreground="{DynamicResource DangerBrush}"
                        FontSize="16" 
                        Text="&#xF136;"/>
                    <TextBlock 
                        FontFamily="{DynamicResource SymbolThemeFontFamily}" 
                        Foreground="{DynamicResource ForegroundBaseBrush}"
                        FontSize="16" 
                        Text="&#xF13D;"/>
                </Grid>
            </ToggleButton>
        </StackPanel>
        <Grid Grid.Row="1" Background="{DynamicResource Dark2Brush}" >
            <ItemsControl Style="{StaticResource LogViewerStyle}" x:Name="ItemsControl" />
        </Grid>
    </Grid>
</UserControl>