<Grid x:Class="OC.Assistant.Theme.BusyOverlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Visibility="Hidden" >
    <Grid>
        <Grid Background="{DynamicResource BackgroundBaseBrush}" Opacity="0.3"></Grid>
        <Grid x:Name="Grid">
            <ContentControl 
                x:Name="Label"
                Foreground="{DynamicResource White3Brush}"
                Template="{DynamicResource IconTemplate}"
                Content="{DynamicResource IconSetting}"/>
        </Grid>
    </Grid>
</Grid>