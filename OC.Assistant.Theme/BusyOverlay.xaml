<Grid x:Class="OC.Assistant.Theme.BusyOverlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Visibility="Hidden">
    <Grid.LayoutTransform>
        <ScaleTransform x:Name="Scale"/>
    </Grid.LayoutTransform>
    <Grid Background="{DynamicResource BackgroundBaseBrush}" Opacity="0.3"></Grid>
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <RotateTransform x:Name="RotateTransformOuter"/>
        </Grid.RenderTransform>
        <Viewbox Margin="0 0 4 4" Height="100" Width="100">
            <Path 
                Data="M 4,24 C 4,35.0457 12.9543,44 24,44 C 35.0457,44 44,35.0457 44,24 C 44,12.9543 35.0457,4 24,4" 
                Stroke="{DynamicResource White3Brush}" 
                StrokeThickness="4" 
                StrokeStartLineCap="Round" 
                StrokeEndLineCap="Round" 
                StrokeLineJoin="Round"/>
        </Viewbox>
    </Grid>
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <RotateTransform x:Name="RotateTransformInner"/>
        </Grid.RenderTransform>
        <Viewbox Margin="0 0 25 25" Height="100" Width="100">
            <Path 
                Data="M 36,24 C 36,17.3726 30.6274,12 24,12 C 17.3726,12 12,17.3726 12,24 C 12,30.6274 17.3726,36 24,36"
                Stroke="{DynamicResource White2Brush}" 
                StrokeThickness="4" 
                StrokeStartLineCap="Round" 
                StrokeEndLineCap="Round" 
                StrokeLineJoin="Round"/>
        </Viewbox>
    </Grid>
</Grid>